<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <Button
        android:id="@+id/button_drop"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="@string/button_drop"
        android:textAllCaps="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:id="@+id/button_info"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_toEndOf="@id/button_drop"
        android:text="@string/button_info"
        android:textAllCaps="true"
        />

    <Button
        android:id="@+id/button_equip"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_toEndOf="@id/button_info"
        android:text="@string/button_equip"
        android:textAllCaps="true"
        />

</RelativeLayout>